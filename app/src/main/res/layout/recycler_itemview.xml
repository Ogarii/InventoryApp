<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".itemview8">

    <LinearLayout android:id="@+id/prodCategory"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStyle">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_width="wrap_content"
            android:layout_height="147dp"
            android:layout_marginStart="@dimen/_11pxh"
            android:layout_marginTop="@dimen/_50pxv"
            android:layout_marginEnd="@dimen/_11pxh"
            android:gravity="end"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:id="@+id/linearRowitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearColumnitems"
                    android:layout_width="363dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.92"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtItems"
                        style="@style/txtInterregular17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_124pxh"
                        android:layout_marginEnd="@dimen/_122pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_items"
                        tools:text="@string/lbl_items" />

                    <LinearLayout
                        android:id="@+id/linearRowsearch"
                        style="@style/groupStylebluegray_100cornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtSearch"
                            style="@style/txtInterregular17_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_9pxv"
                            android:layout_marginBottom="@dimen/_8pxv"
                            android:layout_weight="0.68"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_search"
                            tools:text="@string/lbl_search" />

                        <ImageView
                            android:id="@+id/imageSearchOne"
                            android:layout_width="@dimen/_25pxh"
                            android:layout_height="@dimen/_25pxh"
                            android:layout_marginStart="@dimen/_152pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_19pxh"
                            android:layout_marginBottom="@dimen/_6pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_search"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_search" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearRowcategory"
                        style="@style/groupStylebluegray_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtCategory"
                            style="@style/txtInterregular17_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginBottom="@dimen/_4pxv"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_category"
                            tools:text="@string/lbl_category" />

                        <ImageView
                            android:id="@+id/imageSortDown"
                            android:layout_width="@dimen/_10pxh"
                            android:layout_height="@dimen/_10pxh"
                            android:layout_marginStart="@dimen/_22pxh"
                            android:layout_marginTop="@dimen/_12pxv"
                            android:layout_marginEnd="@dimen/_19pxh"
                            android:layout_marginBottom="@dimen/_11pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_sortdown"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_sortdown" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageSettingsSlider"
                    android:layout_width="@dimen/_25pxh"
                    android:layout_height="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_35pxv"
                    android:layout_marginBottom="@dimen/_50pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_settingsslider"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_settingsslider" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <View android:background="@color/white_A700"
            android:id="@+id/lineLineOne" android:layout_gravity="start"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginTop="@dimen/_30pxv" android:layout_width="@dimen/_360pxh"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activities.Bidding.ProvideBid">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>